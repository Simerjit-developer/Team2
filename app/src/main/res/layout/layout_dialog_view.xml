<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:padding="10dp"
        android:background="@color/white"
        android:layout_height="wrap_content">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/alertTitle"
            android:gravity=""
            android:textSize="16dp"
            android:text="@string/addDialog"
            />


        <LinearLayout
            android:layout_marginTop="10dp"
            android:id="@+id/addressToadd"
            android:layout_below="@+id/alertTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/marker"
                />

            <TextView
                android:layout_width="match_parent"
                android:gravity="left"
                android:paddingLeft="7dp"
                android:textColor="@color/indigo"
                android:text="dljvnsljdvnsdljvbsd"
                android:textSize="17sp"
                android:id="@+id/address"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <TextView
            android:id="@+id/txtNotes"
            android:text="@string/notes"
            android:layout_marginTop="20dp"
            android:textSize="16dp"
            android:layout_below="@+id/addressToadd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/notesExtra"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:background="@drawable/edittxt"
            android:backgroundTint="@color/lightTeal"
            android:hint="@string/notesHint"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content"
            android:maxLines="5"
            android:layout_below="@+id/txtNotes"
            android:layout_alignParentStart="true" />

        <RelativeLayout
            android:layout_marginTop="10dp"
            android:layout_below="@id/notesExtra"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/btnCanc"
                android:gravity="bottom|right"
                android:layout_width="wrap_content"
                android:text="@string/cancBtnDialog"
                android:textSize="18sp"
                android:layout_height="wrap_content"
                android:textColor="@color/Red"
                android:layout_alignParentTop="true"
                android:layout_toStartOf="@+id/btnAdd"
                android:layout_marginEnd="23dp" />

            <TextView
                android:id="@+id/btnAdd"
                android:gravity="bottom|end"
                android:textSize="18sp"
                android:background="@drawable/noshadow_button"
                android:layout_width="wrap_content"
                android:text="@string/addBtnDialog"
                android:textColor="@color/materialGreen"
                android:layout_alignParentEnd="true"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>