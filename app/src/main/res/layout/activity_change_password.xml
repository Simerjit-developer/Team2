<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="50dp"
        android:layout_marginTop="65dp"
        android:background="@color/lightTeal"
        android:paddingTop="30dp"
        android:weightSum="1">

        <EditText
            android:id="@+id/pswOld"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:alpha="1"
            android:background="@drawable/edittxt"
            android:ems="15"
            android:inputType="textPassword"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:textColor="@color/dark_gray"
            android:textColorHint="@color/dark_gray"
            android:textCursorDrawable="@drawable/cursor"
            android:layout_above="@+id/pswNew"
            android:layout_alignStart="@+id/pswNew"
            android:layout_marginBottom="33dp" />

        <EditText

            android:id="@+id/pswNew"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:alpha="1"
            android:background="@drawable/edittxt"
            android:ems="15"
            android:inputType="textPassword"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:textColor="@color/dark_gray"
            android:textColorHint="@color/dark_gray"
            android:textCursorDrawable="@drawable/cursor"
            android:layout_marginBottom="20dp"
            android:layout_above="@+id/textView6"
            android:layout_alignStart="@+id/textView6" />

        <EditText

            android:id="@+id/pswNewRep"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:alpha="1"
            android:background="@drawable/edittxt"
            android:ems="15"
            android:inputType="textPassword"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:textColor="@color/dark_gray"
            android:textColorHint="@color/dark_gray"
            android:textCursorDrawable="@drawable/cursor"
            android:layout_marginBottom="52dp"
            android:layout_above="@+id/btnSavepsw"
            android:layout_centerHorizontal="true" />


        <Button
            android:id="@+id/btnSavepsw"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginBottom="13dp"
            android:gravity="center"
            android:text="@string/save"
            android:textColor="@color/white"
            android:theme="@style/materialGreenButton"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/pswOld"
            android:layout_alignStart="@+id/pswOld"
            android:text="@string/oldpswHINT" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/pswNew"
            android:layout_alignStart="@+id/pswNew"
            android:text="@string/newpswHINT" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/pswNewRep"
            android:layout_alignStart="@+id/pswNewRep"
            android:text="@string/newRpswHINT" />


    </RelativeLayout>

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="123dp"
        app:srcCompat="@drawable/password"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/textView4" />
</FrameLayout>